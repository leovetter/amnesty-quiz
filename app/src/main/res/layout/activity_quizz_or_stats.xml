<?xml version="1.0" encoding="utf-8"?>
<android.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizzOrStatsActivity"
    android:background="@color/colorBlack"
    android:columnCount="1">

    <Button
        android:id="@+id/button_quizz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quizz"
        android:layout_marginTop="50dp"
        android:background="@drawable/button"
        android:layout_gravity="center_horizontal"
        android:onClick="goQuizz"/>

    <Button
        android:id="@+id/button_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stats"
        android:layout_marginTop="50dp"
        android:background="@drawable/button"
        android:layout_gravity="center_horizontal"
        android:onClick="goStats"/>

</android.widget.GridLayout>